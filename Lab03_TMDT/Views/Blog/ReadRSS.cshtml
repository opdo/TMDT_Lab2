<h2>Trang đọc tin tức RSS</h2>
@using (Html.BeginForm())
{
    <input type="url" name="url" placeholder="Nhập địa chỉ đọc RSS" class="form-control" value="@ViewBag.URL" step="min-width: 100%"/>
    <br />
    <input type="submit" value="Đọc tin RSS" class="btn btn-danger"/>
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Link</th>
            <th>Mô tả</th>
            <th>PubDate</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.RSSFeed != null)
        {
            foreach (var item in ViewBag.RSSFeed)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Link</td>
                    <td>@item.Description</td>
                    <td>@item.PubDate</td>
                </tr>
            }
        }
    </tbody>
</table>